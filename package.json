{
  "name": "webglib",
  "version": "1.0.0",
  "description": "",
  "author": "MikezuGe@users.noreply.github.com",
  "homepage": "https://github.com/MikezuGe/webglib#readme",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "source": "src/index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikezuGe/webglib.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MikezuGe/webglib/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "parcel build",
    "start": "parcel",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^tests/(.*)$": "<rootDir>/tests/$1"
    },
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/tests/setup.ts"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "transform": {
      ".*\\.(ts|js)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(wgpu-matrix)/)"
    ],
    "verbose": true
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^src/(.*)$",
      "^test/(.*)$",
      "^../(.*)$",
      "^./(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.12.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.12",
    "@webgpu/types": "^0.1.40",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "3.3.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "wgpu-matrix": "^3.0.1"
  }
}
